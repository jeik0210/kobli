 <input type="hidden" id="heading"  name="heading" value="[% heading %]" />
 <input type="hidden" id="srchany" name="srchany" value="[% srchany %]" />

 [% FOREACH server IN servers %] <input type="hidden" name="id" id="z3950_[% server.id %]" value="[% server.id %]" />
