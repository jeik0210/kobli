 <input type="hidden" id="title"  name="title" value="[% title %]" />
 <input type="hidden" id="uniformtitle"  name="uniformtitle" value="[% uniformtitle %]" />
 <input type="hidden" id="subject" name="subject" value="[% subject %]" />
